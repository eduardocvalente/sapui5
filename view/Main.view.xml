<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    controllerName="myapp.view.Main">
    <App>
        <Page title="Notas Fiscais">
            <content>
                <SearchField id="searchField" placeholder="Pesquisar..." liveChange="onSearch"/>
                <List id="invoiceList" items="{/invoices}">
                    <StandardListItem title="{NumeroNota}" description="{Valor}" type="Active" press="onSelectInvoice"/>
                </List>
            </content>
        </Page>
    </App>
</mvc:View>