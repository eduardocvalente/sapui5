    xmlns:core="sap.ui.core">
    <Dialog
         title="Detalhes da Nota Fiscal"
         stretchOnPhone="true">
         <content>
             <VBox>
                 <Label text="Cliente:"/>
                 <Text text="{/selectedInvoice/customer/name}"/>
                 <Label text="Fornecedor:"/>
                 <Text text="{/selectedInvoice/supplier/name}"/>
                 <Label text="Itens:"/>
                 <List items="{/selectedInvoice/items}">
                     <StandardListItem title="{productName}" 
                                         description="Quantidade: {quantity} - PreÃ§o: {unitPrice}" />
                 </List>
             </VBox>
         </content>
         <endButton>
             <Button text="Fechar" press="onCloseDetail"/>
         </endButton>
    </Dialog>
</core:FragmentDefinition>
